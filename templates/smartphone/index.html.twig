{% extends 'base.html.twig' %}

{% block title %}Smartphone index{% endblock %}

{% block body %}
    <h1>Smartphone index</h1>

  

    <a href="{{ path('app_smartphone_new') }}">Create new</a>

    <div class="container mt-5 mb-5">
    <div class="d-flex justify-content-center row">
        <div class="col-md-10">
            {% for smartphone in smartphones %}
            <div class="row p-2 bg-white border rounded" style="margin-bottom: 6px;">
                <div class="col-md-3 mt-1"><img class="img-fluid img-responsive rounded product-image" src="{{ asset(smartphone.photo) }}"></div>
                <div class="col-md-6 mt-1">
                    <h5>{{ smartphone.name }}</h5>
                    <div class="d-flex flex-row">
                        <div class="ratings mr-2"><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i></div>
                    </div>
                    <div class="mt-1 mb-1 spec-1"><span>{{ smartphone.marque }}</span></div>
                    <div class="mt-1 mb-1 spec-1"><span>Memoire : {{ smartphone.ram }}</span></div>
                    <div class="mt-1 mb-1 spec-1"><span>Stockage : {{ smartphone.stockage }}</span></div>
                    <div class="mt-1 mb-1 spec-1"><span>Etat : {{ smartphone.etat }}</span></div>

                   
                </div>
                <div class="align-items-center align-content-center col-md-3 border-left mt-1">
                    <div class="d-flex flex-row align-items-center">
                        <h4 class="mr-1">{{ smartphone.prix }}</h4>
                    </div>
                   
                    <div class="d-flex flex-column mt-4"><a type="button" class="btn btn-outline-primary btn-sm mt-2" href="{{ path('app_smartphone_show', {'id': smartphone.id}) }}">DÃ©tails</a>
                    <a type="button" class="btn btn-outline-primary btn-sm mt-2" href="{{ path('app_smartphone_edit', {'id': smartphone.id}) }}">Modifier</a>
                    </div>
                </div>
            </div>
        {% endfor %}
           
           
        </div>
    </div>
</div>
{% endblock %}
